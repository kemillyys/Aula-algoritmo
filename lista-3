5
#include <stdio.h>

int main()
{
    int idade, cont_faixa1, cont_faixa2, cont_faixa3, cont_faixa4;
    double peso, faixa1, faixa2, faixa3, faixa4;
    
    for(int i = 0; i < 15; i++){
        printf("Informe a idade e o peso: ");
        scanf("%d %lf", &idade, &peso);
        
        if(idade >= 1 && idade <= 10){
            faixa1 += peso;
            cont_faixa1++;
        }
        
        else if(idade >= 11 && idade <= 20){
            faixa2 += peso;
            cont_faixa2++;
        }
        
        else if(idade >= 21 && idade <= 30){
            faixa3 += peso;
            cont_faixa3++;
        }
        
        else if(idade >= 31){
            faixa4 += peso;
            cont_faixa4++;
        }
        
        else{
            printf("Idade Inválida!");
        }
    }
    
    printf("---- Resultado das médias: ----\n");
    
    if(cont_faixa1 > 0){
        printf("Média dos pesos ente 1 e 10 anos: %.2lf\n", faixa1/cont_faixa1);
    }
    else{
        printf("Não há pessoas na faixa de 1 a 10 anos!\n");
    }
    
    
    if(cont_faixa2 > 0){
        printf("Média dos pesos ente 11 e 20 anos: %.2lf\n", faixa2/cont_faixa2);
    }
    else{
        printf("Não há pessoas na faixa de 11 a 20 anos!\n");
    }
    
    
    if(cont_faixa3 > 0){
        printf("Média dos pesos ente 21 e 30 anos: %.2lf\n", faixa3/cont_faixa3);
    }
    else{
        printf("Não há pessoas na faixa de 21 a 30 anos!\n");
    }
    
    
    if(cont_faixa4 > 0){
        printf("Média dos pesos acima de 32 anos: %.2lf\n", faixa4/cont_faixa4);
    }
    else{
        printf("Não há pessoas de 32 anos ou mais!\n");
    }
    
    return 0;
}

