#include <stdio.h>

int main()
{
    int n, soma = 0, maiorValor, menorValor;
    double media;
    
    for(int i = 0; i < 10; i++){
        printf("Informe um número inteiro positivo: ");
        scanf("%d", &n);
        
        if(i == 0){
            maiorValor = n;
            menorValor = n;
        }
        
        else if(n < menorValor){
            menorValor = n;
        }
        
        else if(n > maiorValor){
            maiorValor = n;
        }
        
        soma += n;
    }
    
    printf("Maior Valor: %d\n", maiorValor);
    printf("Menor Valor: %d\n", menorValor);
    printf("Média: %.2lf\n", (double)soma / 10);

    return 0;
}

