3
#include <stdio.h>

int main()
{
    int x, y, cont = 0;
    double resultado = 1;
    
    printf("Informe os valores (positivos e inteiros) de X e Y: ");
    scanf("%d %d", &x, &y);
    
    while(cont < y){
        resultado *= x;
        cont++;
    }
    
    printf("resultado: %.2lf", resultado);
    
    return 0;
}


