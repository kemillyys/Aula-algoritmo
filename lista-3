7
#include <stdio.h>

int main()
{
    char vinho;
    int cont = 0, contTinto = 0, contBranco = 0, contRose = 0, total;
    
    do{
        printf("Informe o tipo do vinho: \n“T” para tinto\n“B” para branco\n“R” para rosê\n“F” (de fim)\n");
        scanf(" %c", &vinho);
        
        if(vinho != 'f' && vinho != 'F' && (vinho == 'T' || vinho == 't')){
            contTinto++;
            cont++;
        }
        
        else if(vinho != 'f' && vinho == 'B' || vinho == 'b'){
            contBranco++;
            cont++;
        }
        
        else if(vinho != 'f' && vinho == 'R' || vinho == 'r'){
            contRose++;
            cont++;
        }
        
        else if(vinho != 'f' && vinho == 'F' || vinho == 'f'){
            printf("Você saiu!\n");
        }
    }
    while (vinho != 'f' && vinho != 'F');
    
    if(contTinto > 0){
        printf("\nTotal de vinho tinto na adega: %d\n", contTinto);
    }
    else{
        printf("Não possui vinho tinto.\n");
    }
    
    
    if(contBranco > 0){
        printf("Total de vinho branco na adega: %d\n", contBranco);
    }
    else{
        printf("Não possui vinho branco.\n");
    }
    
    
    if(contRose > 0){
        printf("Total de vinho rose na adega: %d\n", contRose);
    }
    else{
        printf("Não possui vinho rose.\n");
    }
    
    if(cont > 0){
        total = contTinto + contBranco + contRose;
        printf("Total de vinhos na adega: %d\n", total);
    }
    else{
        printf("Não possui vinhos na adega!\n");
    }
    
    return 0;
}
