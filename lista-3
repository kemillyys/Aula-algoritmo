6
#include <stdio.h>

int main()
{
    int n, cont = 0;
    double soma = 0, media;
    
    do{
        printf("Informe um número inteiro (-99 para sair): ");
        scanf("%d", &n);
        
        if(n != -99){
            soma += n;
            cont++;
        }
    }
    while (n != -99);
    
    if(cont > 0){
        media = soma / cont;
        printf("Soma: %.2lf\n", soma);
        printf("Média: %.2lf\n", media);
    }
    else{
        printf("Nenhum número foi informado!\n");
    }
    
    return 0;
}

