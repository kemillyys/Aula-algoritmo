1
#include <stdio.h>

int main()
{
    char sexo;
    int idade, totalHomens = 0, totalMulheres = 0;
    double peso, somaIdadeHomens = 0.0, mediaIdadeHomens = 0.0, somaPesoMulheres = 0.0, mediaPesoMulheres = 0.0;
    
    for(int i = 0; i < 10; i++){
        printf("Informe o sexo (F ou M) a idade e o peso: ");
        scanf(" %c %d %lf", &sexo, &idade, &peso);
        
        if(sexo == 'f' || sexo == 'F'){
            totalMulheres++;
            somaPesoMulheres += peso;
        }
        
        else if(sexo == 'm' || sexo == 'M'){
            totalHomens++;
            somaIdadeHomens += idade;
        }
    }
    
    printf("Total de mulheres: %d\n", totalMulheres);
    printf("Total de homens: %d\n", totalHomens);
    
    if(totalHomens > 0){
        mediaIdadeHomens = somaIdadeHomens / totalHomens;
        printf("Soma da idade dos homens: %.2lf\n", somaIdadeHomens);
        printf("Média da idade dos homens: %.2lf\n", mediaIdadeHomens);
    }
    
    if(totalMulheres > 0){
        mediaPesoMulheres = somaPesoMulheres / totalMulheres;
        printf("Total do peso: %.2lf\n", somaPesoMulheres);
        printf("Média do peso das mulheres: %.2lf\n", mediaPesoMulheres);
    }

    return 0;
}

