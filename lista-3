4
#include <stdio.h>

int main()
{
    int op;
    double n1, n2, resultado;
    
    
    
        do{
            printf("Escolha uma opção: \n1 - multiplicar\n2-somar\n3- Subtrair\n4-Dividir\n5-Sair\n");
            scanf("%d", &op);
            
            if(op >= 1 && op <= 4){
                printf("Informe dois numeros: ");
                scanf("%lf %lf", &n1, &n2);
                
                switch(op){
                    case 1:{
                        resultado = n1 * n2;
                        printf("%.2lf\n", resultado);
                        break;
                    }
                    
                    case 2:{
                        resultado = n1 + n2;
                        printf("%.2lf\n", resultado);
                        break;
                    }
                    
                    case 3:{
                        resultado = n1 - n2;
                        printf("%.2lf\n", resultado);
                        break;
                    }
                    
                    case 4:{
                        resultado = n1 / n2;
                        printf("%.2lf\n", resultado);
                        break;
                    }
                }
            }
            
            else if(op == 5){
                printf("Você saiu!");
            }
            
            else{
                printf("Opção inválida!\n");
            }
        }
        
        while(op != 5);
    
    
    return 0;
}


